{
  "info": {
    "_postman_id": "b3c9f6b3-2cbb-4f4a-9f1f-3a1d2b9b6c1a",
    "name": "IMS Backend - Bills",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "lastBillId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Bill",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customer_name\": \"John Doe\",\n  \"products\": [\n    { \"product_id\": 17, \"quantity\": 3 },\n    { \"product_id\": 4, \"quantity\": 1 }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/bills/add",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "bills",
            "add"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save created bill id to environment variable 'lastBillId'",
              "if (pm.response.code === 201) {",
              "  try {",
              "    const json = pm.response.json();",
              "    if (json && json.data && json.data.bill && json.data.bill.id) {",
              "      pm.environment.set('lastBillId', json.data.bill.id);",
              "      console.log('Saved lastBillId =', json.data.bill.id);",
              "    }",
              "  } catch (e) { console.error('Could not parse response JSON', e); }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Bills",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/bills/getAll?page=1&limit=20",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "bills",
            "getAll"
          ],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Bill by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/bills/get/{{lastBillId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "bills",
